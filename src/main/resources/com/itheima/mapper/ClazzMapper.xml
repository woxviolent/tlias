<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.ClazzMapper">
    <insert id="save">
insert into clazz(name, room, begin_date, end_date, master_id, subject, create_time, update_time)
values(#{name}, #{room}, #{beginDate}, #{endDate}, #{masterId}, #{subject}, #{createTime}, #{updateTime})

    </insert>
    <update id="update">
        update clazz
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="room != null">
                room = #{room},
            </if>
            <if test="beginDate != null">
                begin_date = #{beginDate},
            </if>
            <if test="endDate != null">
                end_date = #{endDate},
            </if>
            <if test="masterId != null">
                master_id = #{masterId},
            </if>
        </set>
    </update>
    <delete id="deleteById">
        delete from clazz where id = #{id}
    </delete>

    <select id="list" resultType="com.itheima.pojo.Clazz">
        select * from clazz
    </select>
    <select id="getInfo" resultType="com.itheima.pojo.Clazz">
        select * from clazz where id = #{id}
    </select>

</mapper>